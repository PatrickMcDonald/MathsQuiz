@model MathsQuizApp.Models.MultiplicationViewModel

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewBag.Title = "Multiplication";
}

<partial name="_ValidationSummary" />

<div class="row">
    <div class="col-6">

        What is @Model.Operand1 times @Model.Operand2?

        <form method="post">

            <input type="hidden" asp-for="Operand1" />
            <input type="hidden" asp-for="Operand2" />

            <div class="mb-3">
                <label asp-for="Answer" class="control-label"></label>
                <input type="number" asp-for="Answer" class="form-control" />
                <span asp-validation-for="Answer"></span>
            </div>

            <button type="submit" class="btn btn-primary">Check Answer</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
